{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true
  },

  "typeRoots": ["./src/config"],
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
