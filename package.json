{
  "name": "realtime-chat-and-video-calling",
  "version": "1.0.0",
  "description": "Fun project for real-time chat and video calling using WebRTC and Socket.io",
  "author": "Mohitul Islam",
  "license": "ISC",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "tsc-check": "tsc --noEmit",
    "tsc-test": "tsc --project tsconfig.test.json --noEmit",
    "lint:stage": "pnpm lint && pnpm format:check && pnpm tsc-check",
    "dev": "tsx --watch src/server.ts",
    "build": "tsup",
    "start": "node dist/server.js",
    "test": "vitest --run",
    "test:unit": "vitest --run test/unit",
    "test:integration": "vitest --run test/integration",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "make:migration": "tsx src/migrations/make-migration.ts",
    "migrate": "tsx src/migrations/migrate.ts"
  },
  "dependencies": {
    "bcryptjs": "3.0.3",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "express-rate-limit": "8.2.1",
    "helmet": "8.1.0",
    "jose": "6.1.2",
    "js-yaml": "4.1.1",
    "kafkajs": "2.2.4",
    "mongodb": "7.0.0",
    "mongoose": "9.0.0",
    "mysql2": "3.15.3",
    "redis": "5.10.0",
    "socket.io": "4.8.1",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "uuid": "13.0.0",
    "winston": "3.18.3",
    "winston-mongodb": "7.0.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/js-yaml": "4.0.9",
    "@types/node": "24.10.1",
    "@types/supertest": "6.0.3",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.8",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "@vitest/coverage-istanbul": "4.0.12",
    "@vitest/ui": "4.0.12",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "tsup": "8.5.1",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "vitest": "4.0.12"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "overrides": {
      "glob": "10.4.5",
      "inflight": "npm:@npmcli/move-file@latest",
      "lodash.get": "4.4.2",
      "lodash.isequal": "4.5.0"
    }
  },
  "keywords": [
    "chat",
    "video-calling",
    "webrtc",
    "socket.io",
    "typescript",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohit838/realtime-chat-and-video-calling.git"
  },
  "bugs": {
    "url": "https://github.com/mohit838/realtime-chat-and-video-calling/issues"
  },
  "homepage": "https://github.com/mohit838/realtime-chat-and-video-calling#readme",
  "engines": {
    "node": ">=22.20.0"
  }
}
