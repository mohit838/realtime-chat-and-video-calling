# ============================================
# APP CONFIG
# ============================================
APP_NAME=Realtime Chat
APP_ENV=development
APP_PORT=1234
CORS_ORIGIN=http://localhost:5173,http://localhost:4173,https://myapp.com

# ============================================
# MYSQL DATABASE
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=example_password
DB_NAME=chat_service

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=example_redis_pass
REDIS_DB=0

# ============================================
# JWT AUTH
# ============================================
JWT_SECRET=example_very_long_secret_key_please_replace
JWT_EXPIRY=1h

# ============================================
# KAFKA
# ============================================
KAFKA_ENABLED=true
KAFKA_BROKERS=localhost:19092
KAFKA_CLIENT_ID=realtime-chat

# ============================================
# MONGODB LOGGER
# ============================================
MONGO_URI=mongodb://localhost:27017
MONGO_DB=audit_logs
MONGO_COLLECTION=logs
MONGO_TTL=864000

# ============================================
# HELMET (SECURITY HEADERS)
# ============================================
HELMET_CSP=false
HELMET_COEP=false

# ============================================
# RATE LIMITER
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGER
# ============================================
LOGGER_ENABLED=true
LOGGER_LEVEL=info
